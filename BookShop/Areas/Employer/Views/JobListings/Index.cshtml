@model IEnumerable<JobListingModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobListingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobListingId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationDeadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.JobListingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.JobListingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.JobListingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
</p>
